# Credora Protocol Environment Variables
# Copy this file to .env and fill in your values

# === DEPLOYMENT ACCOUNTS ===
# Import your private keys using: cast wallet import <account_name> --interactive
SEPOLIA_DEPLOYER_NAME=sepolia-deployer
MAINNET_DEPLOYER_NAME=mainnet-deployer

# === RPC URLs ===
SEPOLIA_RPC=https://rpc.sepolia.org
MAINNET_RPC=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# === ETHERSCAN API KEYS (for contract verification) ===
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# === OPTIONAL: Custom RPC and Chain ID ===
RPC_URL=$SEPOLIA_RPC
CHAIN_ID=11155111
DEPLOYER_NAME=$SEPOLIA_DEPLOYER_NAME

# === PROTOCOL CONFIGURATION ===
# Initial owner address (defaults to deployer if not set)
INITIAL_OWNER=

# === DEBUG/VERBOSE LOGGING ===
# Set to true for detailed deployment logs
VERBOSE=true

# === TEST CONFIGURATION ===
# RPC URLs for integration tests (forked blockchain)
SEPOLIA_TEST_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
MAINNET_TEST_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Alternative RPC URLs (optional)
ALCHEMY_SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ALCHEMY_MAINNET_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
INFURA_SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
INFURA_MAINNET_RPC=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# === TEST PARAMETERS ===
# Block numbers for testing (optional)
SEPOLIA_BLOCK_NUMBER=latest
MAINNET_BLOCK_NUMBER=latest

# Test timeouts and gas limits
TEST_TIMEOUT=300000
TEST_GAS_LIMIT=10000000

# Verbose test output
TEST_VERBOSE=true
